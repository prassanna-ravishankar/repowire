# Repowire Configuration Example
# Copy to ~/.repowire/config.yaml

# Relay server connection (for multi-machine mesh)
relay:
  enabled: false
  url: "wss://relay.repowire.io"
  api_key: null  # Get from: repowire relay generate-key

# Local peers (tmux sessions running Claude Code)
peers:
  frontend:
    tmux_session: "frontend"
    path: "/Users/you/app/frontend"
  backend:
    tmux_session: "backend"
    path: "/Users/you/app/backend"
  infra:
    tmux_session: "infra"
    path: "/Users/you/app/infra"

# Daemon settings
daemon:
  auto_reconnect: true
  heartbeat_interval: 30
  socket_path: "/tmp/repowire.sock"

# Logging
logging:
  level: "info"
  file: null  # or "~/.repowire/repowire.log"
